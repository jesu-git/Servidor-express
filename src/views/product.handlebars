<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold text-blue-600 mb-4">Products Page</h1>

    <table class="min-w-full table-auto shadow-md rounded-lg overflow-hidden">
      <thead class="bg-blue-500 text-white">
        <tr>
          <th class="px-4 py-2">ID</th>
          <th class="px-4 py-2">Title</th>
          <th class="px-4 py-2">Description</th>
          <th class="px-4 py-2">Price</th>
          <th class="px-4 py-2">Code</th>
          <th class="px-4 py-2">Stock</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Add to Cart</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr class="bg-white border-b">
            <td class="px-4 py-2">{{this._id}}</td>
            <td class="px-4 py-2">{{this.title}}</td>
            <td class="px-4 py-2">{{this.description}}</td>
            <td class="px-4 py-2">${{this.price}}</td>
            <td class="px-4 py-2">{{this.code}}</td>
            <td class="px-4 py-2">{{this.stock}}</td>
            <td class="px-4 py-2">{{this.status}}</td>
            <th class="px-4 py-2"> <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded add-to-cart" data-product-id="{{this._id}}">agregar a carrito</button></th>
          </tr>
        {{/each}}
      </tbody>
    </table>
    
    <div class="flex flex-wrap justify-center mt-4 space-x-2">
      <a href="/products?limit={{limit}}&page=1" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Primer Pag.</a>
      {{#if hasPrevPage}}
        <a href="/products?limit={{limit}}&page={{prevPage}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Ant Pag.</a>
      {{/if}}
      {{#if hasNextPage}}
        <a href="/products?limit={{limit}}&page={{nextPage}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Sig Pag.</a>
      {{/if}}
      <a href="/products?limit={{limit}}&page={{totalPages}}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Ult Pag.</a>
    </div>